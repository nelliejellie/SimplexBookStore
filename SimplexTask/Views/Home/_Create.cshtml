@{
}
<div class="modal fade" id="MyPopUp" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <h1 class="title-h">Create Book</h1>
                <div>
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label mt-4" for="inputValid">Name</label>
                            <input asp-for="Name" type="text" class="form-control" id="inputValid">
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rating" for="exampleSelect1" class="form-label mt-4">Rating</label>
                            <select asp-for="Rating" name="Rating" class="form-select" id="exampleSelect1">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Author" class="form-label mt-4" for="inputValid">Author</label>
                            <input asp-for="Author" type="text" class="form-control" id="inputValid">
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-lg btn-success" type="submit">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>